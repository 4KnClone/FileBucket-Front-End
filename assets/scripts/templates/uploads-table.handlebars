<table class="table">
  <thead class="thead-inverse">
    <tr>
      <th>File Name</th>
      <th>Date Created</th>
      <th>Date Modified</th>
      <th>Uploaded By</th>
      <th>Tags</th>
      <th>Download</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody class="table-body">

{{#each uploads as |upload|}}

<tr data-id="{{upload.id}}">
  <td>{{upload.name}}</td>
  <td class="createdDate">{{upload.createdAt}}</td>
  <td class="updatedDate">{{upload.updatedAt}}</td>
  <td>{{upload.uploadedBy}}</td>
  <td>
    {{#each upload.tags}}
      <a class="hashtag">#{{this}} </a>
    {{/each}}
  </td>
  <td><a href="{{upload.url}}"<button class="btn btn-success">Download</button></a></td>
  <td>
    {{#if upload.editable }}
      <button class="edit-btn btn btn-info">Edit</button>
      <button class="delete-btn btn btn-danger">Delete</button>
    {{/if}}
  </td>
</tr>

{{/each}}

</tbody>
</table>
